{
    "name": "orba/magento2-coding-standard",
    "description": "Magento 2 Coding Standard used by ORBA",
    "version": "2.1.0",
    "type": "phpcodesniffer-standard",
    "keywords": [
        "orba",
        "code quality",
        "coding standards",
        "magento2",
        "phpcs",
        "quality rules",
        "static analysis"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "ORBA",
            "email": "info@orba.co"
        }
    ],
    "require": {
        "php": "^8.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "magento/magento-coding-standard": "*",
        "slevomat/coding-standard": "^8.6.4"
    },
    "autoload": {
        "psr-4": {
            "Orba\\Magento2CodingStandard\\": "src/OrbaMagento2/",
            "Orba\\Magento2CodingStandardXml\\": "src/OrbaMagento2Xml/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
