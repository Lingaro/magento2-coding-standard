{
    "name": "lingaro/magento2-coding-standard",
    "description": "Magento 2 Coding Standard used by Lingaro",
    "version": "2.3.1",
    "type": "phpcodesniffer-standard",
    "keywords": [
        "lingaro",
        "code quality",
        "coding standards",
        "magento2",
        "phpcs",
        "quality rules",
        "static analysis"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Lingaro sp. z o.o.",
            "homepage": "https://lingarogroup.com/"
        }
    ],
    "require": {
        "php": "^8.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
        "magento/magento-coding-standard": "*",
        "slevomat/coding-standard": "^8.8.0"
    },
    "autoload": {
        "psr-4": {
            "Lingaro\\Magento2CodingStandard\\": "src/LingaroMagento2/",
            "Lingaro\\Magento2CodingStandardXml\\": "src/LingaroMagento2Xml/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
